upstream django {
    server unix:///var/www/sticky_link/deploy/sticky_link.sock;
}

# configuration of the server
server {
    server_name sticky-link.com www.sticky-link.com;
    charset     utf-8;
    client_max_body_size 100M;

    # Django media
    # location /media  {
        # alias /path/to/your/mysite/media;
    # }

    location /static {  # Django static files
        alias /var/www/sticky_link/static;
    }

    location /app/static {  # Static files for app
        alias /var/www/sticky_link/templates/application/dist/static;
    }

    location / {
        uwsgi_pass  django;
        include     /var/www/sticky_link/deploy/uwsgi_params;
    }

    location /wss/ {
        proxy_pass ws://django;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/www.sticky-link.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.sticky-link.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.sticky-link.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = sticky-link.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name sticky-link.com www.sticky-link.com;
    listen 80;
    return 404; # managed by Certbot




}