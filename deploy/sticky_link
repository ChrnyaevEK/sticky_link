upstream django {
    server unix:///var/www/sticky_link/deploy/sticky_link.sock;
}

# configuration of the server
server {
    server_name sticky-link.com www.sticky-link.com;
    charset     utf-8;
    client_max_body_size 100M;

    # Django media
    # location /media  {
        # alias /path/to/your/mysite/media;
    # }

    location /static {  # Django static files
        alias /var/www/sticky_link/static;
    }

    location /app/static {  # Static files for app
        alias /var/www/sticky_link/templates/application/dist/static;
    }

    location / {
        uwsgi_pass  django;
        include     /var/www/sticky_link/deploy/uwsgi_params;
    }

}