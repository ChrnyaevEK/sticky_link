upstream django {
    server unix:///var/www/sticky_link/deploy/sticky_link.sock;
}
upstream django_channels {
 server localhost:9001;
}

# configuration of the server
server {
    server_name app.sticky-link.com;
    charset     utf-8;
    client_max_body_size 100M;

    # Django media
    # location /media  {
        # alias /path/to/your/mysite/media;
    # }

    location /static {  # Django static files
        alias /var/www/sticky_link/static;
    }

    location /app/static {  # Static files for app
        alias /var/www/sticky_link/templates/application/dist/static;
    }

    location / {
        uwsgi_pass  django;
        include     /var/www/sticky_link/deploy/uwsgi_params;
    }

    location /wss/ {
        proxy_pass http://django_channels;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 86400;
        proxy_connect_timeout 75s;
        proxy_buffers 8 32k;
        proxy_buffer_size 64k;
    }
}
